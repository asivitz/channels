
<p id="message_<%= message.id %>" 
<% if message.poster != @user.alias and (@previously_last_checked.nil? or @previously_last_checked < message.updated_at) %>
style="border-left:1px solid #347acb;"
<% end %>
>
    <span class="buttons">
        <% if not message.has_branch? %>
            <% if message.poster == @user.alias %>
                <%= link_to content_tag(:span, ''), [@channel, message], :confirm => "Are you sure?",
                    :method => :delete, :remote => true, :class => 'delete_post' %>
            <% end %>
            <%= link_to content_tag(:span, ''), "/channels/#{@channel.id}?branch_id=#{message.id}", :class => 'make_branch' %>
        <% end %>
    </span>
    <%= raw [message.marked_up_content] %>
</p>

<% if message.has_branch? %>
    <% branch_message = message.successor_for_branch message.branch_link %>
    <% if branch_message %>
        <div class="branchpoint">
            <% if message.branch_link %>
                <%= link_to "#{branch_message.summarize}", "/channels/#{@channel.id}?branch_id=#{message.branch_link}" %>
            <% else %>
                <%= link_to "#{branch_message.summarize}", "/channels/#{@channel.id}" %>
            <% end %>
        </div>
    <% end %>
<% end %>
