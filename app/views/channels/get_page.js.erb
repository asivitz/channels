<% @message_groups.each do |group| %>
    <% group.messages.each do |m| %>

        var added = null;
        var msg = $("<%= escape_javascript(render :partial => "channels/message", :object => m) %>");
        var oldestContainer = null;

        if (bottomPoster() == '<%= m.poster %>:'){
            oldestContainer = getOldestContainer();
            added = msg;
        }else{

            oldestContainer = makeContainer('<%= m.poster %>', '<%= m.pretty_updated_at %>');
            oldestContainer.prependTo($('#message_list'));
            added = oldestContainer;
        }

        var ul = oldestContainer.find('.message_content');
        msg.appendTo(ul);
		
		added.hide().fadeIn();
    <% end %>

<% end %>

<% if not @message_groups.empty? %>
<% last = @message_groups.last.messages.last %>
$('#more_link').attr('href', "/channels/get_page/<%= @channel.id %>?from_date=<%= last.updated_at.to_i %>");
<% end %>

