<li class="message_row">
<div class="meta">
    <a href="javascript:void(0)" class="user_pic" title="<%= message_group.poster %>"><img src="/images/user-default.jpg" width="24" height="24" alt="<%= message_group.poster %>" /></a>
</div>
<p class="username"><%= message_group.poster %></p>
<div class="message_content">
    <% if message_group.respond_to? :messages %>
        <% message_group.messages.each do |m| %>
            <%= render :partial => "channels/message", :object => m %>
        <% end %>
    <% else %>
        <%= render :partial => "channels/message", :object => message_group %>
    <% end %>

</div>
</li>

