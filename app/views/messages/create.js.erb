<% if @message %>

if (topPoster() == '<%= @message.poster %>')
{
    var latestContainer = getLatestContainer();
    var msg = $("<%= escape_javascript(render :partial => "channels/message", :object => @message) %>");
    var ul = latestContainer.find('.message_content');
    msg.appendTo(ul);
    msg.hide().fadeIn();

}
else
{
    var group = $("<%= escape_javascript(render :partial => "channels/message_group", :object => @message_group) %>");
    group.appendTo('#message_list');
    group.hide().fadeIn();
}

messageScrollBottom();

$('#msginput').val("");

spinOff();

<% end %>
